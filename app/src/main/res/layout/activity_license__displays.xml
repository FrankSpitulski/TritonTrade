<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_license__displays"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tmnt.tritontrade.view.License_Displays">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Linceses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/liceses_textView"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:textSize="36sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/liceses_textView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="https://github.com/mevdschee/php-crud-api/blob/master/LICENSE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/php_crud_api" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/space1" />

                <TextView
                    android:text="https://github.com/PHPMailer/PHPMailer/blob/master/LICENSE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phpmailer" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/space2" />

                <TextView
                    android:text="https://github.com/google/gson/blob/master/LICENSE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gson_license" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
