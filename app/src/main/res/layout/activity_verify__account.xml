<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verify__account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tmnt.tritontrade.view.Verify_Account"
    android:background="@drawable/blurred_geisel">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Verify Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verifyEmailLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verifyEmailLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="A verification email has been sent \n to the email provided. Please \n verify your email and click the \n button below to log in."
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/mainLoginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/verifyEmailLabel"
            android:layout_alignStart="@+id/verifyEmailLabel"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="76dp"
            android:background="@color/FiftyTransparentWhite"
            android:onClick="sendToLogIn"
            android:text="Log In"
            android:textColor="@color/white" />

        <Button
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginLabel"
            android:background="@android:color/transparent"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:fontFamily="sans-serif-medium"
            android:onClick="sendToLogIn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="29dp" />

        <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountCheckLabel"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/loginLabel"
            android:layout_alignBottom="@+id/loginLabel"
            android:layout_alignEnd="@+id/verifyEmailLabel"
            android:layout_marginEnd="24dp" />


    </RelativeLayout>
</RelativeLayout>
