<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verify__account__two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tmnt.tritontrade.view.Verify_Account_Two"
    android:background="@drawable/blurred_geisel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:text="Verify Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verifyEmailLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:textSize="30sp" />

        <TextView
            android:text='Refresh this page after you receive the \n verification email to start. A "verify" \n button will appear once your email \n has been approved.'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verifyEmailLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:id="@+id/textView7"
            android:textAlignment="center"
            android:textColor="@color/white" />


        <Button
            android:text="Log In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:background="@android:color/transparent"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/accountCheckLabel"
            android:onClick="sendToLogIn"/>

        <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountCheckLabel"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/button13"
            android:layout_alignBottom="@+id/button13"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp" />

        <Button
            android:text="Verify"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/verifyLabel"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/customerborder"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="sendToLogIn"/>


    </RelativeLayout>

</RelativeLayout>
