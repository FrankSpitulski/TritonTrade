<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.tmnt.tritontrade.view.Profile">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/gradient3"
        android:id="@+id/profile_background"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="160dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_background"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/forSaleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onForSaleClick"
            android:text="Active"
            android:textColor="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/soldButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="onSoldClick"
            android:text="History"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/bottom_navigation" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_items" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="160sp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="10sp"
            android:layout_height="80sp"
            android:layout_marginRight="10sp">

            <ImageView
                android:id="@+id/userPic"
                android:layout_width="175sp"
                android:layout_height="80sp"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/default_photo" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="70sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:text="Username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/username"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:text="Email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/email"
                            android:textColor="#E0E0E0"
                            android:textSize="12sp"
                            android:layout_weight="1" />

                        <TextView
                            android:text="Phone Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/phone"
                            android:textColor="#E0E0E0"
                            android:textSize="12sp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <Button
                        android:text="edit"
                        android:layout_height="wrap_content"
                        android:id="@+id/editProfile"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_width="5sp"
                        android:textColor="@android:color/white"
                        android:onClick="sendToEditProfile"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Description/Bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bio"
            android:textAlignment="center"
            android:paddingTop="7sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingBottom="20sp"
            android:maxLength="140"/>

    </LinearLayout>
</RelativeLayout>
