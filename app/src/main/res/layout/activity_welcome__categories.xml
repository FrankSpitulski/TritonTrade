<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tmnt.tritontrade.view.Welcome_Categories"
    android:background="?attr/colorButtonNormal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <!--android:text="@string/btn_scan_qr"--><![CDATA[
            android:id="@+id/btn_scan_qr"
            android:textSize="15dp"
            />

        ]]>

        <TextView
            android:text="Welcome!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Welcome"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:textColorLink="?attr/actionMenuTextColor"
            android:textColor="@color/colorPrimaryDark"
            android:background="#d6d7d7"
            />

        <TextView
            android:text="Please choose the categories you would like to follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choose_categories"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:background="#d6d7d7" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="#000000"
                    android:id="@+id/view" />


                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/TEXTBOOK"
                    android:textOff="TEXTBOOK"
                    android:textOn="TEXTBOOK"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/view"
                    android:text="TEXTBOOK" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/CLOTHES"
                    android:textOff="CLOTHES"
                    android:textOn="CLOTHES"
                    android:layout_marginStart="14dp"
                    android:layout_alignBaseline="@+id/TEXTBOOK"
                    android:layout_alignBottom="@+id/TEXTBOOK"
                    android:layout_toEndOf="@+id/view"
                    android:text="CLOTHES" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/FURNITURE"
                    android:textOff="FURNITURE"
                    android:textOn="FURNITURE"
                    android:layout_marginTop="160dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/view"
                    android:text="FURNITURE" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/FOOD"
                    android:textOff="FOOD"
                    android:textOn="FOOD"
                    android:layout_alignBaseline="@+id/FURNITURE"
                    android:layout_alignBottom="@+id/FURNITURE"
                    android:layout_alignStart="@+id/CLOTHES"
                    android:text="FOOD" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/TECHNOLOGY"
                    android:textOff="TECHNOLOGY"
                    android:textOn="TECHNOLOGY"
                    android:layout_marginTop="290dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/view"
                    android:text="TECHNOLOGY" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/SUPPLIES"
                    android:textOff="SUPPLIES"
                    android:textOn="SUPPLIES"
                    android:text="SUPPLIES"
                    android:layout_alignBaseline="@+id/TECHNOLOGY"
                    android:layout_alignBottom="@+id/TECHNOLOGY"
                    android:layout_alignStart="@+id/FOOD" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/STORAGE"
                    android:textOff="STORAGE"
                    android:textOn="STORAGE"
                    android:layout_marginTop="420dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/view"
                    android:text="STORAGE" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/SERVICES"
                    android:textOff="SERVICES"
                    android:textOn="SERVICES"
                    android:layout_marginTop="550dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/view"
                    android:text="SERVICES" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/MISCS"
                    android:textOff="MISCS"
                    android:textOn="MISCS"
                    android:text="MISCS"
                    android:layout_alignBaseline="@+id/STORAGE"
                    android:layout_alignBottom="@+id/STORAGE"
                    android:layout_alignStart="@+id/TRANS" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/NOTHING"
                    android:text=""
                    android:layout_marginTop="680dp"
                    android:layout_marginEnd="12dp" />

                <ToggleButton
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/roundbuttonw"
                    android:id="@+id/TRANS"
                    android:textOff="TRANS"
                    android:textOn="TRANS"
                    android:text="TRANS"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:layout_alignBaseline="@+id/SERVICES"
                    android:layout_alignBottom="@+id/SERVICES"
                    android:layout_alignStart="@+id/SUPPLIES" />

                .

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="FOLLOW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FOLLOW"
            android:textColor="?attr/actionModeSplitBackground"
            android:textSize="30sp"
            android:background="@color/common_action_bar_splitter"
            android:layout_alignParentBottom="true"
            style="@style/Widget.AppCompat.Button" />

    </RelativeLayout>

</RelativeLayout>

