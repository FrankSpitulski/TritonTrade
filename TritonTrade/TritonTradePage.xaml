<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:TritonTrade" x:Class="TritonTrade.TritonTradePage">


	<RelativeLayout x:Name="background">

		<Image Source="blurred_geisel.jpg"

			RelativeLayout.WidthConstraint="{ConstraintExpression
            Type=RelativeToParent,Property=Width,Factor=1,Constant=0}"

			RelativeLayout.HeightConstraint="{ConstraintExpression
            Type=RelativeToParent,Property=Height,Factor=1,Constant=0}"

            Aspect="AspectFill"
		/>
		
		<StackLayout x:Name="container"

			RelativeLayout.XConstraint =
      		"{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.5,
                             Constant=-130}"

			RelativeLayout.YConstraint =
      		"{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.5,
                             Constant=0}"

			RelativeLayout.WidthConstraint="{ConstraintExpression
            Type=RelativeToParent,Property=Width,Factor=0.7,Constant=0}"

			>

			<RelativeLayout x:Name="DropShadow"

				HorizontalOptions="Center">

				<Label Text="Triton Trade" TextColor="#2D61C2"
					HorizontalOptions="Center"
					FontFamily="Helvetica"
					FontSize="45"
					FontAttributes="Bold"

					RelativeLayout.XConstraint =
      				"{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.0,
                             Constant=2}"

					RelativeLayout.YConstraint =
      				"{ConstraintExpression Type=RelativeToParent,
                             Property=Width,
                             Factor=0.0,
                             Constant=2}"
				/>

				<Label Text="Triton Trade" TextColor="#FFEE00"
				HorizontalOptions="Center"
				FontFamily="Helvetica"
				FontSize="45"
				FontAttributes="Bold"
				/>
				
			</RelativeLayout>

			<Entry x:Name="usernameTextField" Placeholder="Username" />
			<Entry x:Name="passwordTextField" Placeholder="Password" IsPassword="true" />
			<Button x:Name="loginButton" Text="Log in" FontAttributes="Bold"
				FontFamily="Helvetica" FontSize="18"
			BackgroundColor="#2D61C2" TextColor="#FFEE00"/>

			<Button x:Name="forgotPWButton" Text="Forgot Password?" Font="Helvetica"
				TextColor="#FFF" BackgroundColor="Transparent"

			/>

			
			
		</StackLayout>

	</RelativeLayout>




</ContentPage>
